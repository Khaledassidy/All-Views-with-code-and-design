<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBox">

<!--    checkbox howe 3onsour bye2dar l user mn 5elelo yekbous 3ala aktar mn 5eyar-->
<!--    hala2 bade et3amal ma3o design w coding-->

    <CheckBox
        android:id="@+id/swimming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="swimming"
        android:checked="true">

    </CheckBox>

    <CheckBox
        android:id="@+id/fotball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/swimming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="fotball">

    </CheckBox>

    <CheckBox
        android:id="@+id/basket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fotball"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="basket">

    </CheckBox>

</androidx.constraintlayout.widget.ConstraintLayout>